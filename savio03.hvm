// Doubles a Native Nat
(Double Zero)     = Zero
(Double (Succ n)) = (Succ (Succ (Double n)))

// Double a Scott Nat
SDouble = λn (n
  λpred ((SSucc) ((SSucc) ((SDouble) pred)))
  SZero
)

// CDouble = @n (n
